{
  "eslint.options":{
    "configFile": "/Users/erlend/dotfiles/vim/coc/.eslintrc"
  },
  "eslint.autoFixOnSave": true,

  "prettier.semi": false,
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,

  "javascript.validate.enable": false,
  "javascript.suggest.enabled": false,

  "diagnostic.errorSign": "üö® ",
  "diagnostic.warningSign": "‚ùï ",
  "diagnostic.hintSign": "ùíâ ",
  "diagnostic.infoSign": "‚Ñπ ",
  "diagnostic.messageTarget": "echo",
  "diagnostic.checkCurrentLine": true,

  "coc.preferences.formatOnSaveFiletypes": ["python", "terraform"],

  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "terraform-tflint": {
      "command": "tflint",
      "args": ["--langserver"],
      "filetypes": ["terraform"]
    },
    "terraform-lsp": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"]
    }
  },

  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatters": {
    "terraformfmt": {
      "command": "terraform",
      "args": ["fmt", "-no-color", "-"]
    },
    "shfmt": {
      "command": "shfmt"
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "terraform": "terraformfmt",
    "sh": "shfmt"
  }
}
